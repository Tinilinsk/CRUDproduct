<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDproduct.EditProductPopup"
             Title="EditProductPopup">
    <VerticalStackLayout Spacing="15" Padding="30">

        <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
            <VerticalStackLayout Spacing="10">

                <Label Text="Product Name:" FontSize="14"/>
                <Entry x:Name="NameEntry" Placeholder="Enter product name"/>

                <Label Text="Price:" FontSize="14"/>
                <Entry x:Name="PriceEntry" Placeholder="0.00" Keyboard="Numeric"/>

                <Label Text="Category:" FontSize="14"/>
                <Entry x:Name="CategoryEntry" Placeholder="Enter category"/>

            </VerticalStackLayout>
        </Frame>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Cancel" Grid.Column="0" Clicked="OnCancelClicked"/>
            <Button Text="Save Changes" Grid.Column="1" Clicked="OnSaveClicked" BackgroundColor="Green"/>
        </Grid>

    </VerticalStackLayout>
</ContentPage>